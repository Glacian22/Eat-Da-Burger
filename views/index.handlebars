<br>
<div class="flex-container">
  <div id="uneated">
    <h3>Burgers awaiting their doom:</h3>
    <ul>
      {{#each burgers}}
      {{#unless eaten}}
      <div class="list">
        {{> uneaten-block}}
        <button class="devour" id={{id}}>DEVOUR</button>
      </div>
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div id="eaten">
    <h3>Burgers in burger-heaven:</h3>
    <ul>
      {{#each burgers}}
      {{#if eaten}}
      <div class="list">
        {{> uneaten-block}}
      </div>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<div id="create">
  <h2>Add a burger!</h2>
  <form>
    Burger name:<br>
    <input id="burger-name" type="text" name="name">
    <br><br>
    <input type="submit" id="form-button">
  </form>
</div>

